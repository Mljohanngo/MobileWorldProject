@page "{id:int?}"
@model MobileWorldAPI.Pages.IndexModel
@{

}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-lg-12 col-md-12  col-sm-12 col-xs-12">
            <div class="cuerpo">
                <a href="#">Englis</a>
                <img src="@Model.BaseImg" style="width: 65%;">
                <h2 ID="h2Number">أدخل رقمك</h2>
                <p class="sms">مجانًا لمدة 24 ساعة ثم 11 درهمًا في الأسبوع</p>
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div id="inputnumber" class="form-group row">
                        <div class="col-6 offset-3">
                            <input asp-for="Msisdn" value="" class="form-control" placeholder="5Xxxxxxxx" />
                            <span asp-validation-for="Msisdn"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3 offset-2">
                            <input style="display:inline-block;" type="submit" value="" class="login login-submit form-control" />
                        </div>
                    </div>
                </form>

                <div id="inputnumber">
                    <p class="sms" style="font-weight: bold; font-size: 18px;">
                    </p>
                </div>
                <div class="bot">
                </div>
                <a href="#">Englis</a>
                <button onclick="goBack()">مخرج</button>

                <p class="sms" style="font-weight: bold; font-size: 8px;">
                    بالضغط على زر الاشتراك أعلاه ، فإنك توافق على الشروط والأحكام أدناه<br>
                    1. سيبدأ الاشتراك المدفوع تلقائيًا بعد الفترة المجانية<br>
                    2. لا يوجد التزام ، يمكنك إلغاء اشتراكك في أي وقت بإرسال STOP إلى 3333<br>
                    3. للحصول على الدعم ، يرجى الاتصال info@mobilelifeconnect.com <br>
                    4. النسخة التجريبية المجانية صالحة فقط للمشتركين الجدد
                </p>


            </div>
            </div>
    </div>
</div>

@section Scripts{
    <script>
        function OnSelect() {
            var o = $("#seloper").val();
            if (o == 5000) {
                $("#h2Number").hide();
                $("#inputnumber").hide();
                $("#msisdnTXT").prop('required', false);

            }
            else {
                $("#h2Number").show();
                $("#inputnumber").show();
                $("#msisdnTXT").prop('required', true);
            }
        }
         function goBack() {
            window.history.back();
        }
    </script>
}